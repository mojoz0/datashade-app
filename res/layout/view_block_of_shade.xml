<?xml version="1.0" encoding="utf-8"?>

 
    <com.example.datashade.BlockOfShade
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ds="http://schemas.android.com/apk/res/com.example.datashade" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        ds:showText="true"
        ds:labelPosition="left"
        ds:isShaded="true" >
        

     
    <LinearLayout 
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
      android:orientation="vertical">
    
    
    <Button 
        android:id="@+id/button_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mbutton_text"
  
        android:onClick="generateEntryM" />

      <Button
        android:id="@+id/button_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pbutton_text"
		android:background="#FFFFFF"
        android:onClick="generateEntryP" />
      </LinearLayout>
</com.example.datashade.BlockOfShade>